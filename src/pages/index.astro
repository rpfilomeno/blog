---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SITE_BASE, SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import RetroSloth from '../components/RetroSloth.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)
---

<BaseLayout>
	<main
		class="app-container grid lg:grid-cols-2 gap-12 items-center py-20 md:py-32 pt-32 md:pt-40 relative"
	>
		<div class="flex flex-col gap-8 order-2 lg:order-1">
			<div>
				<p class="block text-3xl opacity-70 mb-2">Welcome to</p>
				<h1 class="text-6xl md:text-8xl font-bold leading-none tracking-tight">
					A.I. Sloth Slayer
				</h1>
			</div>
			<p class="text-2xl font-light leading-normal opacity-90 max-w-2xl">
				Deep dives into the latest trends in Automation, AI and Machine Learning.
			</p>
			<div class="flex flex-wrap gap-6">
				{
					SocialLinks.map((link) => (
						<a
							class="text-xl text-primary dark:text-primary-dark underline hover:underline underline-offset-4"
							href={link.url}
							target="_blank"
						>
							{link.name}
						</a>
					))
				}
			</div>
		</div>

		<div class="relative w-full max-w-[500px] mx-auto lg:ml-auto order-1 lg:order-2">
			<RetroSloth />
		</div>
	</main>

	<!-- Recent Posts Section -->
	<section class="app-container">
		<h2 class="section-title">Recent Posts</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href={`${SITE_BASE}/blog`}
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
		<div class="space-y-6">
			<h2 class="section-title">About Me</h2>
			<p class="text-lg max-w-xl pb-4">
				I'm a Research and Development Specialist from the Philippines. I like designing and building products based on AI automation.
			</p>
			<a class="btn-secondary" href={`${SITE_BASE}/about`}
				>Go to About
				<Icon size={20} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title">Get in touch</h2>
			<p class="text-lg max-w-xl">
				Use the buttons below for my resume & email.
			</p>
			<div class="flex flex-wrap mt-auto space-x-4">
				<a
					class="btn-primary"
					href="https://rogverse.fyi/"
					target="_blank"
					>Get a Qoute
					<Icon height={20} name="mdi:cart-outline" />
				</a>
				<a class="btn-secondary" href="https://calendly.com/rogverse/30min" target="_blank"
					>Book a Meeting
					<Icon height={20} name="mdi:calendar-blank-outline" />
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
