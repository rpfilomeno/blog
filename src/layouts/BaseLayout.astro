---
import BaseHead from '../components/BaseHead.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import Botpress from '../components/Botpress.astro';
import HeadScripts from '../components/HeadScripts.astro';	



interface Props {
	title?: string
	description?: string
	image?: string
}

const { title, description, image } = Astro.props

import '@fontsource-variable/inter'
import '@fontsource-variable/jetbrains-mono'
---

<!doctype html>
<html lang="en">
	<head>
    <HeadScripts />
		<BaseHead
			title={title || SITE_TITLE}
			description={description || SITE_DESCRIPTION}
			image={image}
		/>
	</head>
	<body
		class="text-foreground bg-background font-light dark:text-foreground-dark dark:bg-background-dark transition-colors"
	>
		
		<Navbar title={SITE_TITLE} />
		<slot />
		<Footer />
		<Botpress />
	</body>
</html>
