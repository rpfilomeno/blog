<div id="sloth-container" class="retro-sloth-container relative w-full aspect-square max-w-lg mx-auto overflow-visible">
  <svg
    viewBox="0 0 400 400"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="sloth-svg w-full h-full"
    preserveAspectRatio="xMidYMid meet"
  >
    <defs>
      <linearGradient id="bodyGradient" x1="100" y1="0" x2="300" y2="400" gradientUnits="userSpaceOnUse">
        <stop offset="0%" stop-color="#C19A6B" /> <!-- Earthy brown -->
        <stop offset="100%" stop-color="#8B5A2B" /> <!-- Darker brown -->
      </linearGradient>
      <linearGradient id="faceGradient" x1="150" y1="100" x2="250" y2="200" gradientUnits="userSpaceOnUse">
        <stop offset="0%" stop-color="#F5DEB3" /> <!-- Wheat -->
        <stop offset="100%" stop-color="#E0C090" />
      </linearGradient>
       <filter id="retro-glow" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="2" result="blur" />
        <feComposite in="SourceGraphic" in2="blur" operator="over" />
      </filter>
    </defs>

    <!-- Background Elements (Abstract Retro Shapes) -->
    <g class="parallax-layer" data-depth="0.05">
        <circle cx="350" cy="50" r="30" fill="#FF6B6B" opacity="0.6" class="retro-shape float-anim-1" />
        <rect x="20" y="300" width="40" height="40" fill="#4ECDC4" opacity="0.6" transform="rotate(45 40 320)" class="retro-shape float-anim-2" />
        <circle cx="50" cy="100" r="15" fill="#FFE66D" opacity="0.6" class="retro-shape float-anim-3" />
    </g>

    <!-- Branch -->
    <g class="parallax-layer" data-depth="0.1">
      <path
        d="M -50 80 Q 200 120 450 60"
        stroke="#4A3728"
        stroke-width="24"
        stroke-linecap="round"
        class="branch"
      />
      <!-- Leaves -->
      <g class="leaves">
          <path d="M 50 80 Q 30 50 60 40 Q 90 50 70 80 Z" fill="#6B8C42" class="leaf leaf-1"/>
          <path d="M 350 70 Q 380 40 400 60 Q 380 90 350 70 Z" fill="#6B8C42" class="leaf leaf-2"/>
      </g>
    </g>

    <!-- Sloth Group -->
    <g class="sloth-group" transform="translate(200, 200)"> 
        
        <!-- Back Arm (Left) -->
        <g class="limb arm-left parallax-layer" data-depth="0.2">
             <path d="M -60 -80 Q -90 0 -50 40" stroke="url(#bodyGradient)" stroke-width="28" stroke-linecap="round" fill="none" />
             <path d="M -60 -80 L -60 -90" stroke="#333" stroke-width="6" stroke-linecap="round" /> <!-- Claw -->
        </g>

        <!-- Back Leg (Left) -->
        <g class="limb leg-left parallax-layer" data-depth="0.2">
             <path d="M -40 80 Q -80 120 -50 0" stroke="url(#bodyGradient)" stroke-width="28" stroke-linecap="round" fill="none" transform="rotate(10)"/>
        </g>

      <!-- Body -->
      <g class="body parallax-layer" data-depth="0.3">
         <ellipse cx="0" cy="50" rx="70" ry="90" fill="url(#bodyGradient)" />
         <!-- Belly Patch -->
         <ellipse cx="0" cy="50" rx="45" ry="60" fill="#D2B48C" opacity="0.8" />
      </g>

      <!-- Head Group -->
      <g class="head-group parallax-layer" data-depth="0.5">
          <!-- Neck connection hint -->
         <path d="M -20 -30 Q 0 -20 20 -30 L 20 10 L -20 10 Z" fill="url(#bodyGradient)" />

        <g class="head">
            <!-- Main Head Shape -->
          <ellipse cx="0" cy="0" rx="55" ry="45" fill="url(#bodyGradient)" />
          
          <!-- Face Plate -->
          <path d="M -35 -10 Q 0 -5 35 -10 Q 40 20 0 35 Q -40 20 -35 -10 Z" fill="url(#faceGradient)" />

          <!-- Eyes Container -->
          <g class="eyes">
            <!-- Left Eye -->
            <g class="eye left-eye" transform="translate(-20, 5)">
                 <!-- Dark patch -->
                <ellipse cx="0" cy="0" rx="14" ry="12" fill="#5D4037" transform="rotate(-15)"/>
                <!-- Eyeball -->
                <circle cx="0" cy="0" r="5" fill="#FFF" class="eyeball" />
                <circle cx="0" cy="0" r="2" fill="#000" class="pupil" />
                <!-- Eyelid decoration -->
                <path d="M -14 -6 Q 0 6 14 -6 Z" fill="#5D4037" class="eyelid" />
            </g>

            <!-- Right Eye -->
            <g class="eye right-eye" transform="translate(20, 5)">
                 <!-- Dark patch -->
                <ellipse cx="0" cy="0" rx="14" ry="12" fill="#5D4037" transform="rotate(15)"/>
                 <!-- Eyeball -->
                <circle cx="0" cy="0" r="5" fill="#FFF" class="eyeball" />
                <circle cx="0" cy="0" r="2" fill="#000" class="pupil" />
                 <!-- Eyelid decoration -->
                <path d="M -14 -6 Q 0 6 14 -6 Z" fill="#5D4037" class="eyelid" />
            </g>
          </g>

          <!-- Nose -->
          <ellipse cx="0" cy="18" rx="8" ry="6" fill="#3E2723" class="nose" />
          
          <!-- Mouth -->
          <path d="M -10 28 Q 0 32 10 28" stroke="#3E2723" stroke-width="2" stroke-linecap="round" fill="none" class="mouth" />
        </g>
      </g>

       <!-- Front Arm (Right) -->
       <g class="limb arm-right parallax-layer" data-depth="0.6">
            <path d="M 50 -80 Q 90 0 50 40" stroke="url(#bodyGradient)" stroke-width="28" stroke-linecap="round" fill="none" />
             <path d="M 50 -80 L 50 -90" stroke="#333" stroke-width="6" stroke-linecap="round" /> <!-- Claw -->
       </g>
       
       <!-- Front Leg (Right) -->
       <g class="limb leg-right parallax-layer" data-depth="0.6">
            <path d="M 40 80 Q 80 120 50 0" stroke="url(#bodyGradient)" stroke-width="28" stroke-linecap="round" fill="none" transform="rotate(-10)" />
       </g>

    </g> <!-- End Sloth Group -->

  </svg>
</div>

<style>
  .retro-sloth-container {
    perspective: 1000px;
    transform-style: preserve-3d;
    --mouse-x: 0; 
    --mouse-y: 0;
  }

  /* Floating Animation for background shapes */
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(5deg); }
  }

  .float-anim-1 { animation: float 6s ease-in-out infinite; }
  .float-anim-2 { animation: float 8s ease-in-out infinite reverse; }
  .float-anim-3 { animation: float 7s ease-in-out infinite 1s; }

  /* Leaf wiggle */
  @keyframes wiggle {
      0%, 100% { transform: rotate(0deg); }
      50% { transform: rotate(5deg); }
  }
  .leaf {
      transform-origin: bottom center;
      animation: wiggle 4s ease-in-out infinite;
  }

  /* Blinking - SVG path morph or scale */
  @keyframes blink {
    0%, 2%, 60%, 62% { transform: scaleY(1); } 
    1%, 61% { transform: scaleY(0.1); } 
  }
  
  /* We actually animate the eyelid by scaling the masking or translating */
  @keyframes eyelid-blink {
      0%, 48%, 52%, 100% { transform: translateY(-100%); } /* Open (hidden above) - simplified logic, let's just toggle opacity or scale y */
  }
  
  /* Better blink: just scale the eye container vertical? No, looks weird. 
     Let's animate the eyelid path visibility or position. 
     Actually, simpler CSS blink: close the eye */
  /* Parallax and Rotate Effect via CSS Var */
  .head-group {
      transform-origin: center;
      /* Rotate head slightly based on mouse */
      transition: transform 0.1s ease-out;
      transform: 
        translate(calc(var(--mouse-x) * 20px), calc(var(--mouse-y) * 20px))
        rotateX(calc(var(--mouse-y) * -15deg)) 
        rotateY(calc(var(--mouse-x) * 15deg));
  }
  
  .pupil {
      /* Pupils follow mouse more intensely */
       transform: 
        translate(calc(var(--mouse-x) * 4px), calc(var(--mouse-y) * 4px));
       transition: transform 0.05s linear;
  }

  .body {
       transition: transform 0.2s ease-out;
       transform: 
        translate(calc(var(--mouse-x) * 10px), calc(var(--mouse-y) * 10px))
        rotateX(calc(var(--mouse-y) * -5deg)) 
        rotateY(calc(var(--mouse-x) * 5deg));
  }

  .limb {
      transition: transform 0.3s ease-out;
  }
  .arm-right, .leg-right {
      transform: translate(calc(var(--mouse-x) * 25px), calc(var(--mouse-y) * 25px));
  }
   .arm-left, .leg-left {
      transform: translate(calc(var(--mouse-x) * 5px), calc(var(--mouse-y) * 5px));
  }
  
  /* Nose twitch */
  @keyframes twitch {
      0%, 90%, 100% { transform: translateX(0); }
      92% { transform: translateX(2px); }
      94% { transform: translateX(-2px); }
      96% { transform: translateX(2px); }
      98% { transform: translateX(0); }
  }
  .nose {
      animation: twitch 5s ease-in-out infinite;
  }
  
  /* Retro glow hover effect */
  .retro-sloth-container:hover .sloth-svg {
      filter: drop-shadow(0 0 10px rgba(78, 205, 196, 0.3));
  }
</style>

<script>
  const container = document.getElementById('sloth-container');

  if (container) {
    document.addEventListener('mousemove', (e) => {
      const { innerWidth, innerHeight } = window;
      const x = (e.clientX / innerWidth) - 0.5; // range -0.5 to 0.5
      const y = (e.clientY / innerHeight) - 0.5;

      // Update CSS variables for parallax
      container.style.setProperty('--mouse-x', x.toString());
      container.style.setProperty('--mouse-y', y.toString());
    });
  }
</script>
